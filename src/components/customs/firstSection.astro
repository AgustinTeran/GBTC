---
var language = Astro.url.pathname.split('/')[1];
var texts = {
  en: {
    title: "Your trusted place to buy & manage your Crypto",
    button: "More info",
  },
  es: {
    title: "Tu lugar de aprender y gestionar tus criptomonedas",
    button: "Más información",
  },
  fr: {
    title: "Votre lieu de confiance pour apprendre à gérer vos crypto-monnaie",
    button: "Info",
  },
}
---

<section class="relative h-[calc(100vh-64px)] bg-cover bg-no-repeat min-h-[350px] max-h-[1200px]" style={{backgroundPosition:"50% 50%",backgroundImage: `url(https://gbtcborn.com/assets/images/p01-1.webp)`}}>
  <div class="text-white gap-8 flex-col absolute top-0 left-0 w-full h-full z-10 bg-[#0808086f] flex justify-center items-center">
    <h1 class="text-5xl lg:text-6xl font-bold text-center max-w-3xl mx-auto">
      {texts[language].title}
    </h1>
    <button class="px-8 py-3 rounded-md text-base bg-[var(--primary-color)] text-white font-semibold hover:bg-[var(--hover-primary-color)]">
      {texts[language].button}
    </button>

  </div>
</section>